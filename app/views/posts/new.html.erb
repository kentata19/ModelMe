
<div class="container">
    <div class="text-center  bg-mario">
      <br>
      <br>
        <h2 class="text-center amatic">NEW POST</h2>
      </br>
      <br>
    </div>

    
    <br>
    <%= form_with model: @post, local:true, class:"contact-form row" do |form| %>
      <div class="col-12">
        <%= form.text_field :title, id: "title", class: "input-text js-input"  %>
        <label class="label text-center" for="name">Title</label>
      </div>

      <div class="form-field col-12">
        <%= form.text_area :caption, id: "caption", class: "input-text js-input"%>
        <label class="label" for="message">Caption</label>
      </div>

      <div class="col-12">
        <label class="label" for="message">Photo</label>
      </div>
      
      <div class="col-12 circle-avatar">
        
        <%= image_tag 'no-image.png', id:"avatar_img_prev",class:"hidden" %>
        <%= form.file_field :images, multiple: true, id: 'post_img' %>

      </div>
      <div class="form-field col-12 align-center">
        
        <%= form.submit "Submit", class: "submit-btn" %>
      </div>

      

      <hr>
      
      
    <% end %>
    
  
</div>


<%= javascript_pack_tag 'post' %>
