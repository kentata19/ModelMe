
<div class="container"> 
  
  <div class="card mb-3" style="max-width: 540px;">
    <div class="row">
      
      <div class="col-md-7">
      
        
        <section>
            
          <div class="carousel">
              <% number = 1 %>
              <% if @review.images.attached? %>
                <% @review.images.each do |image| %>
                  <input type="radio" name="slides" id="slide-<%= number %>">
                  <% number += 1%>
                <% end %>
              <% else %>
                <% @review.post.images.each do |image| %>
                  <input type="radio" name="slides" id="slide-<%= number %>">
                  <% number += 1%>
                <% end %>
              <% end %>
              
              <ul class="carousel__slides">
                <% if @review.images.attached? %>
                  <% @review.images.each do |img| %>
                    <li class="carousel__slide">
                        <figure>
                          <div class="card border-blue">
                            <%= image_tag img.variant(resize_to_fill: [1580, 1080]), class: "card-img-top" %>
                          </div>
                        </figure>
                    </li>
                  <% end %>
                <% else %>
                  <% @review.post.images.each do |img| %>
                    <li class="carousel__slide">
                        <figure>
                          <div class="card border-blue">
                            <%= image_tag img.variant(resize_to_fill: [1580, 1080]), class: "card-img-top" %>
                          </div>
                        </figure>
                    </li>
                  <% end %>
                <% end %>
              </ul> 
              
              <ul class="carousel__thumbnails">
                <div class="container"> 
                  <div class="row">  
                    <% i = 1 %>
                    <% if @review.images.attached? %>
                      <% @review.images.each do |photo| %>
                        <li>
                            <label for="slide-<%= i %>"><%= image_tag photo.variant(resize_to_fill: [1180, 1080]) %></label>
                            
                              
                            
                        </li>
                        <% i += 1%>
                      <% end %>
                    <% else %>
                      <% @review.post.images.each do |photo| %>
                        <li>
                            <label for="slide-<%= i %>"><%= image_tag photo.variant(resize_to_fill: [1180, 1080]) %></label>
                          
                              
                            
                        </li>
                        <% i += 1%>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </ul>
              
          </div>
            
        </section>

      </div>
      <div class="col-md-5 bg-black">
        <div class="card-body">
          
          <%= link_to user_path(@review.user), class: "black-color no-text-decoration" do %>
                      
                          
                          
            <% if @review.user.profile_photo.attached? %>

              <%= image_tag @review.user.profile_photo.variant(resize_to_fill: [1080, 1080]), class: "post-profile-icon" %>
            <% else %>
              <img src="/assets/avatar.png" class="post-profile-icon" />
            <% end %>
            <strong><span class="white-color"><%= @review.user.name%></span></strong>


              
            
          <% end %>
          <h6 class="card-text white"><%= @review.caption%></h6>
          <br>
            <%= link_to  "https://twitter.com/share?url=#{request.url}&text=#{ @review.caption }", title: 'Twitter', target: '_blank' do%>
              <br><h3><i class="fab fa-twitter"></i></h3><small><span class="white-color">twitterでシェア</span></small></br>
            <% end %>
          </br>
        </div>
      </div>
      
    </div>
  </div>

</div>