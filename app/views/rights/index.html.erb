
    
    <div class="card-group">
      <% @rights.each do |obj| %>
        <% post = Post.find(obj.post_id) %>
        
        <div class="col-xl-2 col-lg-4 col-md-6 col-12">
          <div class="card" style="width: 14.5rem;">
            <div class="card-body">
              <strong class="max-350px">
                
                <%= link_to user_path(obj.user), class: "black-color no-text-decoration" do %>
                    
                  
                  
                  <% if obj.user.profile_photo.attached? %>
      
                    <%= image_tag obj.user.profile_photo.variant(resize_to_fill: [1080, 1080]), class: "post-profile-icon" %>
                  <% else %>
                    <img src="/assets/avatar.png" class="post-profile-icon" />
                  <% end %>
                  <%= obj.user.name%>
                <% end %>
                
                
              </strong>
              
            </div>
            <%= link_to right_path(obj) do %>
              <% if obj.images.attached? %>
                <%= image_tag obj.images.first.variant(resize_to_fill: [1080, 1080]), class: "card-img-top" %>
              <% else %>
                <%= image_tag post.images.first.variant(resize_to_fill: [1080, 1080]), class: "card-img-top" %>
              <% end %>
            <% end %>
            
            <div class="card-body">
            
                <%= link_to right_path(obj),class: "black-color no-text-decoration" do %><small class="card-text max-350px"><strong><%= obj.content%></strong></small><% end %>
                <br>
                <span class="max-350px">
                  <strong>
                    <h7>creator:</h7>
                    <%= link_to user_path(post.user) do %>
                  
                  
                  
                      <% if post.user.profile_photo.attached? %>
          
                        <%= image_tag post.user.profile_photo.variant(resize_to_fill: [1080, 1080]), class: "post-index-profile-icon" %>
                      <% else %>
                        <img src="/assets/avatar.png" class="post-index-profile-icon" />
                      <% end %>
                    <% end %>
                    <%= link_to user_path(post.user),class: "black-color no-text-decoration" do %><%= post.user.name %><% end %>
                  </strong>
                </span>
                  <p class="sample"></p>
                  <br>
                  
                    <div class="row">
                      <div class="col-4 text-center">
                        <h5 class="card-title text-center">
                          <h7 class="text-center"><small><strong class="max-150px"><i class="fas fa-coins"></i><%= obj.point %></strong></small></h7>
                        </h5>
                      </div>
                      <div class="col-8">
                        <h6 class="card-title text-center">
                          
                          <% if obj.criterions.first %>
                            <% ar = obj.sympathies.length / obj.criterions.first.sp.to_f * 100 %>
                            <div class="bg-graf">
                              <% if ar >= 100 %>
                                <div class="item item1" style="width: 100%;">
                                  <span class="item_label"><small><strong>達成率:<%= ar.round %>%</strong></small></span>
                                </div>
                              <% else %>
                                <div class="item item1" style="width: <%= ar.round%>%;">
                                  <span class="item_label"><small><strong>達成率:<%= ar.round %>%</strong></small></span>
                                </div>
                              <% end %>
                            </div>
                          <% else %>
                            <div class="bg-graf">
                              <div class="item item1" style="width: 0%;">
                                <span class="item_label"><small><strong>達成率:0%</strong></small></span>
                              </div>
                            </div>
                          <% end %>
                        </h6>
                      </div>
                      <div class="col-4">
                        
                      </div>
                    </div>
                    
                    <div class="row">
                      
                      
                      <div class="col-4 text-center">
                        <%= link_to new_right_path(post), class: "black-color text-center","data-turbolinks": false do %>
                          <br>
                              
                            <h7><i class="fas fa-fist-raised my-black"></i> <small><strong>依頼</strong></small></h7>
                          </br>
                        <% end %>
                      </div>
                      <div class="col-4 text-center">
                        <% if current_user != post.user %>
                          <%= link_to new_support_path(post), class: "black-color text-center" do %>
                            <br>
                              <h7><i class="far fa-thumbs-up my-black"></i> <small><strong>サポ</strong></small></h7>
                              
                            </br>
                          <% end %>
                        <% else %>
                        <% end %>
                      </div>
                      <div class="col-4 text-center">
                        <% if current_user == post.user && obj.criterions.first%>
                
                        <% elsif current_user == post.user && obj.criterions.first.nil? %>
                            <%= link_to new_criterion_path(obj),class: "black-color no-text-decoration" do %>
                              <br>
                                <h7><i class="fas fa-hand-lizard my-black"></i> <small><strong>基準</strong></small></h7>
                              </br>
                            <% end %>
                        <% elsif obj.criterions.first %>
                            <%= link_to new_sympathy_path(obj),class: "black-color no-text-decoration","data-turbolinks": false do %>
                              <br>
                                <h7><i class="fas fa-heartbeat my-black"></i> <small><strong>共感</strong></small></h7>
                              </br>
                            <% end %>
                        <% else %>
                        <% end %>
                        
                          
                        
                      </div>
                    </div>
                  </br>
            </div>
          </div>
            
          
            
        </div>
                      
      <% end %>
      
    </div>
    <div class="text-center">
      <%= paginate @rights %>
    </div>
